{
  "name": "twig-asset-webpack-plugin",
  "version": "1.0.3",
  "description": "Webpack plugin to add assets referenced in twig files to the compilation as additional assets.",
  "author": "Erik Perri",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --detectOpenHandles",
    "lint": "eslint src/**/*",
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "prepare": "npm run clean && npm run build",
    "preversion": "npm run prepare && npm run lint && npm run test"
  },
  "engines": {
    "node": ">= 8.9.0"
  },
  "dependencies": {
    "loader-utils": "^2.0.0"
  },
  "devDependencies": {
    "@tsconfig/node10": "^1.0.7",
    "@types/jest": "^26.0.19",
    "@types/loader-utils": "^2.0.1",
    "@types/memory-fs": "^0.3.2",
    "@types/mini-css-extract-plugin": "^1.2.2",
    "@types/node": "^14.14.16",
    "@types/webpack": "^4.41.25",
    "@types/webpack-manifest-plugin": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "css-loader": "^5.0.1",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "jest": "^26.6.3",
    "memory-fs": "^0.5.0",
    "mini-css-extract-plugin": "^1.3.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3",
    "webpack": "^4.44.2",
    "webpack-manifest-plugin": "^2.2.0"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erik-perri/twig-asset-webpack-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/erik-perri/twig-asset-webpack-plugin/issues"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
